generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

// Book classification enums for faceted taxonomy
enum BookSourceType {
  primary
  secondary
}

enum BookFunction {
  foundational
  theory
  introductory
  educational
  historical
  commentary
  polemic
}

enum BookDifficulty {
  beginner
  intermediate
  advanced
}

enum BookTradition {
  classical_marxism
  leninism
  trotskyism
  maoism
  western_marxism
  marxism_leninism
  other
}

model User {
  id            String    @id @default(uuid())
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  email         String    @unique
  emailVerified Boolean   @default(false)
  name          String
  image         String?
  accounts      Account[]
  sessions      Session[]
  videos        Video[]
  books         Book[]
  authors       Author[]
  channels      Channel[]
}

model Account {
  id                     String   @id @default(uuid())
  createdAt              DateTime @default(now())
  updatedAt              DateTime @updatedAt
  providerId             String
  accountId              String
  userId                 String
  accessToken            String?
  refreshToken           String?
  idToken                String?
  accessTokenExpiresAt   DateTime?
  refreshTokenExpiresAt  DateTime?
  scope                  String?
  password               String?
  user                   User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([providerId, accountId])
  @@index([userId])
}

model Session {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  userId    String
  expiresAt DateTime
  token     String   @unique
  ipAddress String?
  userAgent String?
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model Verification {
  id         String   @id @default(uuid())
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  value      String
  expiresAt  DateTime
  identifier String

  @@index([identifier])
}

model Video {
  id          String   @id @default(uuid())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  title        String
  description  String   @db.Text
  url          String
  thumbnailUrl String?
  duration     String?
  channelName  String?  // Deprecated: kept for backwards compatibility
  publishedAt  DateTime?

  tags        String[]
  category    String?
  order       Int      @default(0)
  isPublished Boolean  @default(true)

  createdBy   String
  creator     User     @relation(fields: [createdBy], references: [id], onDelete: Cascade)

  channelId   String?
  channel     Channel? @relation(fields: [channelId], references: [id], onDelete: SetNull)

  linkedBooks VideoBook[]

  @@index([createdBy])
  @@index([isPublished])
  @@index([channelId])
}

model Channel {
  id            String   @id @default(uuid())
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  channelId     String   @unique  // YouTube channel ID (e.g., "UCxxx")
  name          String
  slug          String   @unique  // URL-friendly slug (e.g., "second-thought")
  url           String?            // Full channel URL
  description   String?  @db.Text
  thumbnailUrl  String?
  
  subscriberCount Int?
  videoCount      Int?
  viewCount       Int?
  
  customUrl     String?  // YouTube custom URL (@handle)
  country       String?
  publishedAt   DateTime?

  videos        Video[]
  createdBy     String?
  creator       User?    @relation(fields: [createdBy], references: [id], onDelete: SetNull)

  @@index([channelId])
  @@index([slug])
  @@index([createdBy])
}

model Book {
  id          String   @id @default(uuid())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  title           String
  description     String   @db.Text
  isbn            String?
  isbn13          String?
  authors         String[]
  publisher       String?
  publishedDate   String?
  thumbnailUrl    String?
  pageCount       Int?
  categories      String[]
  language        String?
  previewLink     String?
  infoLink        String?

  readFreeLinks   String[]  @default([])
  purchaseLinks   Json?
  goodreadsRating Float?
  goodreadsReviews Int?
  externalReviews Json?

  // Faceted classification fields
  sourceType      BookSourceType?
  functions       BookFunction[]   @default([])
  difficulty      BookDifficulty?
  traditions      BookTradition[]  @default([])

  tags            String[]
  order           Int      @default(0)
  isPublished     Boolean  @default(true)

  createdBy       String
  creator         User     @relation(fields: [createdBy], references: [id], onDelete: Cascade)

  authorRelations BookAuthor[]
  linkedVideos    VideoBook[]

  @@index([createdBy])
  @@index([isPublished])
  @@index([isbn])
  @@index([isbn13])
  @@index([sourceType])
  @@index([difficulty])
}

model Author {
  id          String   @id @default(uuid())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  slug        String   @unique
  name        String
  bio         String?  @db.Text
  photoUrl    String?

  books       BookAuthor[]
  createdBy   String?
  creator     User?    @relation(fields: [createdBy], references: [id], onDelete: SetNull)

  @@index([slug])
  @@index([createdBy])
}

model BookAuthor {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())

  bookId    String
  authorId  String
  order     Int      @default(0)

  book      Book     @relation(fields: [bookId], references: [id], onDelete: Cascade)
  author    Author   @relation(fields: [authorId], references: [id], onDelete: Cascade)

  @@unique([bookId, authorId])
  @@index([bookId])
  @@index([authorId])
  @@index([order])
}

model VideoBook {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())

  videoId   String
  bookId    String

  video     Video    @relation(fields: [videoId], references: [id], onDelete: Cascade)
  book      Book     @relation(fields: [bookId], references: [id], onDelete: Cascade)

  @@unique([videoId, bookId])
  @@index([videoId])
  @@index([bookId])
}
