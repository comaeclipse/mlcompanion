---
import Layout from "../../../layouts/Layout.astro";
import Breadcrumb from "../../../components/Breadcrumb.astro";
import { EpisodeCard } from "../../../components/EpisodeCard";
import { prisma } from "../../../lib/prisma";

const { slug } = Astro.params;

if (!slug) {
  return Astro.redirect("/podcasts");
}

const podcast = await prisma.podcast.findFirst({
  where: {
    slug,
    isPublished: true,
  },
  include: {
    episodes: {
      where: { isPublished: true },
      orderBy: [{ order: "asc" }, { publishedAt: "desc" }, { createdAt: "desc" }],
    },
  },
});

if (!podcast) {
  return Astro.redirect("/podcasts");
}

const pageTitle = `${podcast.name} - MLCompanion`;
---

<Layout title={pageTitle}>
  <div class="page podcast-show-page">
    <Breadcrumb items={[
      { label: "Home", href: "/" },
      { label: "Podcasts", href: "/podcasts" },
      { label: podcast.name }
    ]} />

    <div class="podcast-header">
      <div class="podcast-cover">
        {podcast.thumbnailUrl ? (
          <img src={podcast.thumbnailUrl} alt={podcast.name} class="podcast-cover-img" />
        ) : (
          <div class="podcast-cover-placeholder">
            {podcast.name.charAt(0).toUpperCase()}
          </div>
        )}
      </div>

      <div class="podcast-info">
        <h1 class="podcast-title">{podcast.name}</h1>

        {podcast.author && (
          <p class="podcast-author">{podcast.author}</p>
        )}

        {podcast.description && (
          <p class="podcast-description">{podcast.description}</p>
        )}

        <div class="podcast-meta">
          <span class="meta-badge">{podcast.episodes.length} episode{podcast.episodes.length !== 1 ? "s" : ""}</span>
        </div>

        <div class="podcast-links">
          {podcast.spotifyUrl && (
            <a href={podcast.spotifyUrl} target="_blank" rel="noopener noreferrer" class="podcast-link-btn">
              Spotify
            </a>
          )}
          {podcast.appleUrl && (
            <a href={podcast.appleUrl} target="_blank" rel="noopener noreferrer" class="podcast-link-btn">
              Apple Podcasts
            </a>
          )}
          {podcast.websiteUrl && (
            <a href={podcast.websiteUrl} target="_blank" rel="noopener noreferrer" class="podcast-link-btn">
              Website
            </a>
          )}
          {podcast.feedUrl && (
            <a href={podcast.feedUrl} target="_blank" rel="noopener noreferrer" class="podcast-link-btn">
              RSS Feed
            </a>
          )}
        </div>

        {podcast.tags.length > 0 && (
          <div class="podcast-tags">
            {podcast.tags.map((tag: string) => (
              <a
                href={`/podcasts/tag/${tag.toLowerCase().replace(/\s+/g, "-")}`}
                class="pill"
              >
                {tag}
              </a>
            ))}
          </div>
        )}
      </div>
    </div>

    <section class="episodes-section">
      <h2 class="episodes-heading">Episodes</h2>

      {podcast.episodes.length === 0 ? (
        <div class="panel" style="text-align: center; padding: 2rem;">
          <p class="muted">No episodes yet.</p>
        </div>
      ) : (
        <div class="episodes-list">
          {podcast.episodes.map((episode) => (
            <a href={`/episode/${episode.id}`} style="text-decoration: none; color: inherit;">
              <EpisodeCard episode={episode} />
            </a>
          ))}
        </div>
      )}
    </section>
  </div>
</Layout>

<style>
  .podcast-show-page {
    max-width: 900px;
  }

  .podcast-header {
    display: flex;
    gap: 2rem;
    margin-top: 1.5rem;
    padding-bottom: 2rem;
    border-bottom: 1px solid var(--border-color);
  }

  .podcast-cover {
    flex-shrink: 0;
  }

  .podcast-cover-img {
    width: 200px;
    height: 200px;
    object-fit: cover;
    border-radius: 16px;
    box-shadow: 0 4px 16px rgba(67, 44, 23, 0.15);
  }

  .podcast-cover-placeholder {
    width: 200px;
    height: 200px;
    border-radius: 16px;
    background: linear-gradient(135deg, #7b2d8b, #4a1a5e);
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    font-size: 4rem;
    font-weight: 700;
    box-shadow: 0 4px 16px rgba(67, 44, 23, 0.15);
  }

  .podcast-info {
    flex: 1;
    min-width: 0;
  }

  .podcast-title {
    font-family: "Crimson Pro", "Times New Roman", serif;
    font-size: clamp(1.5rem, 3vw, 2rem);
    font-weight: 600;
    margin: 0 0 0.5rem;
    line-height: 1.3;
  }

  .podcast-author {
    font-size: 1rem;
    color: var(--muted-color);
    margin: 0 0 0.75rem;
    font-family: "Work Sans", "Segoe UI", sans-serif;
  }

  .podcast-description {
    font-size: 0.9rem;
    color: var(--muted-color);
    margin: 0 0 1rem;
    line-height: 1.5;
    font-family: "Work Sans", "Segoe UI", sans-serif;
  }

  .podcast-meta {
    margin-bottom: 0.75rem;
  }

  .meta-badge {
    font-size: 0.8rem;
    color: var(--muted-color);
    background: var(--wash-color);
    padding: 4px 10px;
    border-radius: 999px;
    font-family: "Work Sans", "Segoe UI", sans-serif;
  }

  .podcast-links {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    margin-bottom: 1rem;
  }

  .podcast-link-btn {
    font-size: 0.82rem;
    padding: 6px 14px;
    border-radius: 8px;
    background: rgba(123, 45, 139, 0.1);
    color: #7b2d8b;
    text-decoration: none;
    font-weight: 500;
    font-family: "Work Sans", "Segoe UI", sans-serif;
    transition: background 0.15s;
  }

  .podcast-link-btn:hover {
    background: rgba(123, 45, 139, 0.2);
  }

  .podcast-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .podcast-tags .pill {
    text-decoration: none;
    transition: opacity 0.15s;
  }

  .podcast-tags .pill:hover {
    opacity: 0.7;
  }

  .episodes-section {
    margin-top: 2rem;
  }

  .episodes-heading {
    font-family: "Crimson Pro", "Times New Roman", serif;
    font-size: 1.3rem;
    margin: 0 0 1rem;
    padding-bottom: 0.5rem;
    border-bottom: 2px solid var(--border-color);
  }

  .episodes-list {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  @media (max-width: 768px) {
    .podcast-header {
      flex-direction: column;
      align-items: center;
      text-align: center;
    }

    .podcast-cover-img,
    .podcast-cover-placeholder {
      width: 160px;
      height: 160px;
    }

    .podcast-links {
      justify-content: center;
    }

    .podcast-tags {
      justify-content: center;
    }
  }
</style>
