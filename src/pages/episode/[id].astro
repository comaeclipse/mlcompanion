---
import Layout from "../../layouts/Layout.astro";
import Breadcrumb from "../../components/Breadcrumb.astro";
import { prisma } from "../../lib/prisma";

const { id } = Astro.params;

if (!id) {
  return Astro.redirect("/podcasts");
}

const episode = await prisma.episode.findFirst({
  where: {
    id,
    isPublished: true,
  },
  include: {
    podcast: {
      select: {
        id: true,
        name: true,
        slug: true,
        thumbnailUrl: true,
        author: true,
      },
    },
  },
});

if (!episode) {
  return Astro.redirect("/podcasts");
}

const pageTitle = `${episode.title} - ${episode.podcast.name} - MLCompanion`;

const dateStr = episode.publishedAt
  ? new Date(episode.publishedAt).toLocaleDateString("en-US", { year: "numeric", month: "long", day: "numeric" })
  : null;
---

<Layout title={pageTitle}>
  <div class="page episode-page">
    <Breadcrumb items={[
      { label: "Home", href: "/" },
      { label: "Podcasts", href: "/podcasts" },
      { label: episode.podcast.name, href: `/podcasts/show/${episode.podcast.slug}` },
      { label: episode.title }
    ]} />

    <div class="episode-layout">
      <div class="episode-main">
        <!-- Podcast info bar -->
        <a href={`/podcasts/show/${episode.podcast.slug}`} class="podcast-bar">
          {episode.podcast.thumbnailUrl ? (
            <img src={episode.podcast.thumbnailUrl} alt={episode.podcast.name} class="podcast-bar-img" />
          ) : (
            <div class="podcast-bar-placeholder">
              {episode.podcast.name.charAt(0).toUpperCase()}
            </div>
          )}
          <div class="podcast-bar-info">
            <span class="podcast-bar-name">{episode.podcast.name}</span>
            {episode.podcast.author && (
              <span class="podcast-bar-author">{episode.podcast.author}</span>
            )}
          </div>
        </a>

        <!-- Episode title -->
        <h1 class="episode-title">
          {episode.episodeNumber && (
            <span class="episode-number">#{episode.episodeNumber}</span>
          )}
          {episode.title}
        </h1>

        <!-- Meta -->
        <div class="episode-meta">
          {episode.duration && <span class="meta-badge">{episode.duration}</span>}
          {dateStr && <span class="meta-badge">{dateStr}</span>}
          {episode.seasonNumber && <span class="meta-badge">Season {episode.seasonNumber}</span>}
        </div>

        <!-- Audio Player -->
        {episode.audioUrl && (
          <div class="audio-player">
            <audio controls preload="metadata" style="width: 100%;">
              <source src={episode.audioUrl} />
              Your browser does not support the audio element.
            </audio>
          </div>
        )}

        <!-- Pros/Cons -->
        {(episode.pros.length > 0 || episode.cons.length > 0) && (
          <div class="episode-labels">
            {episode.pros.length > 0 && (
              <div class="label-row">
                <svg class="label-icon label-icon--pro" xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="12" cy="12" r="10"/><path d="M8 12h8"/><path d="M12 8v8"/></svg>
                {episode.pros.map((pro: string) => (
                  <span class="label-pill label-pill--pro">{pro}</span>
                ))}
              </div>
            )}
            {episode.cons.length > 0 && (
              <div class="label-row">
                <svg class="label-icon label-icon--con" xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="12" cy="12" r="10"/><path d="M8 12h8"/></svg>
                {episode.cons.map((con: string) => (
                  <span class="label-pill label-pill--con">{con}</span>
                ))}
              </div>
            )}
          </div>
        )}

        <!-- Description -->
        {episode.description && (
          <div class="episode-description">
            <button class="episode-description-toggle" type="button">Show description</button>
            <p class="episode-description-text">{episode.description}</p>
          </div>
        )}

        <!-- Tags -->
        {episode.tags.length > 0 && (
          <div class="episode-tags">
            {episode.tags.map((tag: string) => (
              <a
                href={`/podcasts/tag/${tag.toLowerCase().replace(/\s+/g, "-")}`}
                class="pill"
              >
                {tag}
              </a>
            ))}
          </div>
        )}

        <!-- External links -->
        {episode.externalUrl && (
          <div class="episode-external">
            <a href={episode.externalUrl} target="_blank" rel="noopener noreferrer" class="button">
              Listen on External Platform
            </a>
          </div>
        )}
      </div>
    </div>
  </div>
</Layout>

<script>
  document.querySelectorAll<HTMLElement>(".episode-description").forEach((el) => {
    const text = el.querySelector<HTMLElement>(".episode-description-text");
    const btn = el.querySelector<HTMLButtonElement>(".episode-description-toggle");
    if (!text || !btn) return;

    btn.addEventListener("click", () => {
      const visible = text.style.display === "block";
      text.style.display = visible ? "none" : "block";
      btn.textContent = visible ? "Show description" : "Hide description";
    });
  });
</script>

<style>
  .episode-page {
    max-width: 800px;
  }

  .episode-layout {
    margin-top: 1.5rem;
  }

  .podcast-bar {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    text-decoration: none;
    color: inherit;
    padding: 0.75rem;
    border-radius: 12px;
    background: var(--wash-color);
    border: 1px solid var(--border-color);
    transition: background 0.15s;
  }

  .podcast-bar:hover {
    background: var(--paper-color);
  }

  .podcast-bar-img {
    width: 48px;
    height: 48px;
    object-fit: cover;
    border-radius: 10px;
  }

  .podcast-bar-placeholder {
    width: 48px;
    height: 48px;
    border-radius: 10px;
    background: linear-gradient(135deg, #7b2d8b, #4a1a5e);
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    font-weight: 700;
    font-size: 1.2rem;
  }

  .podcast-bar-info {
    display: flex;
    flex-direction: column;
    gap: 0.15rem;
  }

  .podcast-bar-name {
    font-weight: 600;
    font-size: 0.95rem;
    font-family: "Work Sans", "Segoe UI", sans-serif;
  }

  .podcast-bar-author {
    font-size: 0.8rem;
    color: var(--muted-color);
    font-family: "Work Sans", "Segoe UI", sans-serif;
  }

  .episode-title {
    font-family: "Crimson Pro", "Times New Roman", serif;
    font-size: clamp(1.4rem, 3vw, 2rem);
    font-weight: 600;
    margin: 1.25rem 0 0.75rem;
    line-height: 1.3;
  }

  .episode-number {
    color: #7b2d8b;
    margin-right: 0.5rem;
  }

  .episode-meta {
    display: flex;
    flex-wrap: wrap;
    gap: 0.75rem;
    margin-bottom: 1.25rem;
  }

  .meta-badge {
    font-size: 0.8rem;
    color: var(--muted-color);
    background: var(--wash-color);
    padding: 4px 10px;
    border-radius: 999px;
    font-family: "Work Sans", "Segoe UI", sans-serif;
  }

  .audio-player {
    margin-bottom: 1.5rem;
    padding: 1rem;
    background: var(--wash-color);
    border: 1px solid var(--border-color);
    border-radius: 12px;
  }

  .audio-player audio {
    border-radius: 8px;
  }

  .episode-labels {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
    margin-bottom: 1.25rem;
  }

  .label-row {
    display: flex;
    align-items: center;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .label-icon {
    flex-shrink: 0;
  }

  .label-icon--pro {
    color: #2e7d32;
  }

  .label-icon--con {
    color: #c62828;
  }

  .label-pill {
    font-size: 0.78rem;
    padding: 3px 10px;
    border-radius: 999px;
    font-family: "Work Sans", "Segoe UI", sans-serif;
    font-weight: 500;
    letter-spacing: 0.02em;
  }

  .label-pill--pro {
    background: rgba(46, 125, 50, 0.1);
    color: #2e7d32;
  }

  .label-pill--con {
    background: rgba(198, 40, 40, 0.1);
    color: #c62828;
  }

  .episode-description {
    margin-bottom: 1.25rem;
  }

  .episode-description-text {
    display: none;
    margin: 0.75rem 0 0;
    padding: 1rem;
    background: var(--wash-color);
    border-radius: 12px;
    border: 1px solid var(--border-color);
    white-space: pre-wrap;
    line-height: 1.6;
    color: var(--muted-color);
    font-size: 0.9rem;
    font-family: "Work Sans", "Segoe UI", sans-serif;
  }

  .episode-description-toggle {
    background: none;
    border: none;
    color: var(--accent-color);
    cursor: pointer;
    font-weight: 600;
    font-size: 0.85rem;
    padding: 0;
    font-family: "Work Sans", "Segoe UI", sans-serif;
  }

  .episode-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    margin-bottom: 1.5rem;
  }

  .episode-tags .pill {
    text-decoration: none;
    transition: opacity 0.15s;
  }

  .episode-tags .pill:hover {
    opacity: 0.7;
  }

  .episode-external {
    margin-top: 1.5rem;
  }

  .episode-external .button {
    text-decoration: none;
    display: inline-block;
  }
</style>
