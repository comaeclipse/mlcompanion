---
import Layout from "../../layouts/Layout.astro";
import { BookLibrary } from "../../components/BookLibrary";
import { prisma } from "../../lib/prisma";

const books = await prisma.book.findMany({
  where: { isPublished: true },
  orderBy: [{ order: "asc" }, { createdAt: "desc" }],
});
---

<Layout title="Book Library - MLCompanion">
  <div class="page">
    <header class="hero">
      <div style="display: flex; justify-content: space-between; align-items: end; gap: 1rem; flex-wrap: wrap;">
        <div>
          <h1 style="margin-bottom: 0.5rem;">ðŸ“š Book Library</h1>
          <p class="muted" style="margin: 0;">Essential readings on Marxist-Leninist theory and practice</p>
        </div>
      </div>
    </header>

    <section style="margin-top: 1.5rem;">
      {books.length === 0 ? (
        <div class="panel" style="text-align: center; padding: 3rem;">
          <p class="muted">No books available yet. Check back soon!</p>
        </div>
      ) : (
        <BookLibrary client:load books={books} />
      )}
    </section>
  </div>
</Layout>
