---
import Layout from "../../layouts/Layout.astro";
import Breadcrumb from "../../components/Breadcrumb.astro";
import { VideoLibraryWithToggle } from "../../components/VideoLibraryWithToggle";
import { prisma } from "../../lib/prisma";

const videos = await prisma.video.findMany({
  where: { isPublished: true },
  orderBy: [{ order: "asc" }, { createdAt: "desc" }],
});
---

<Layout title="Video Library - MLCompanion">
  <div class="page">
    <Breadcrumb items={[
      { label: "Home", href: "/" },
      { label: "Videos" }
    ]} />

    <header class="hero">
      <div style="display: flex; justify-content: space-between; align-items: end; gap: 1rem; flex-wrap: wrap;">
        <div>
          <h1 style="margin-bottom: 0.5rem;">ðŸ“¹ Video Library</h1>
          <p class="muted" style="margin: 0;">Educational videos on Marxist-Leninist theory and practice</p>
        </div>
      </div>
    </header>

    <section style="margin-top: 1.5rem;">
      {videos.length === 0 ? (
        <div class="panel" style="text-align: center; padding: 3rem;">
          <p class="muted">No videos available yet. Check back soon!</p>
        </div>
      ) : (
        <VideoLibraryWithToggle client:load videos={videos} />
      )}
    </section>
  </div>
</Layout>
